{
  "name": "nodeapi",
  "version": "1.0.0",
  "description": "Examples of a Star Wars API",
  "main": "dist/server.js",
  "scripts": {
    "start": "tsc && node .",
    "debug": "export DEBUG=* && npm start",
    "test": "jest",
    "test:dev": "jest --watchAll",
    "test:single": "jest -t",
    "coverage": "jest --collectCoverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gitDylanHub/nodeAPI.git"
  },
  "keywords": [
    "API"
  ],
  "author": "Dylan Wright",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gitDylanHub/nodeAPI/issues"
  },
  "homepage": "https://github.com/gitDylanHub/nodeAPI#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.16",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-prettier": "^3.3.0",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "coverageDirectory": "./coverage/",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": -10
      }
    },
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "./src/.*\\.(test|spec)?\\.(ts|ts)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "node"
    ],
    "roots": [
      "<rootDir>/src"
    ]
  }
}
